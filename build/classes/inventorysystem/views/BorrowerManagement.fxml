<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="inventorysystem.controllers.BorrowerController"
      spacing="10">
    
    <!-- Padding for the VBox -->
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <!-- Input Fields -->
    <GridPane hgap="10" vgap="10">
        <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        
        <Label text="Position:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="positionField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        
        <Label text="Type:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <ComboBox fx:id="typeComboBox" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </GridPane>

    <!-- Buttons -->
    <HBox spacing="10">
        <Button fx:id="addButton" text="Add" onAction="#handleAdd"/>
        <Button fx:id="updateButton" text="Update" onAction="#handleUpdate" disable="true"/>
        <Button fx:id="deleteButton" text="Delete" onAction="#handleDelete" disable="true"/>
        <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel" visible="false"/>
    </HBox>

    <!-- Borrower Table -->
    <TableView fx:id="borrowerTable" prefHeight="300">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colName" text="Name" prefWidth="150"/>
            <TableColumn fx:id="colPosition" text="Position" prefWidth="150"/>
            <TableColumn fx:id="colType" text="Type" prefWidth="100"/>
            <TableColumn fx:id="colActions" text="Actions" prefWidth="200"/>
        </columns>
    </TableView>

</VBox>
