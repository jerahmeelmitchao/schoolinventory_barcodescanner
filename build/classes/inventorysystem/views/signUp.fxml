<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane id="AnchorPane" prefHeight="500.0" prefWidth="700.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="inventorysystem.controllers.SignUpController">
    <stylesheets>
        <URL value="@/inventorysystem/assets/styles.css" />
    </stylesheets>
   <children>
      <AnchorPane prefHeight="505.0" prefWidth="350.0" style="-fx-background-color: #2c3e50;">
         <children>
            <TextField fx:id="signInUsername" layoutX="72.0" layoutY="145.0" prefHeight="25.0" prefWidth="207.0" promptText="Username" />
            <Text fill="WHITE" layoutX="126.0" layoutY="132.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Sign In To Continue" />
            <Button fx:id="signInBtn" layoutX="72.0" layoutY="281.0" mnemonicParsing="false" onAction="#handleSignUp" prefHeight="25.0" prefWidth="207.0" style="-fx-cursor: Hand;" text="Sign Up" />
            <PasswordField fx:id="signInPassword" layoutX="72.0" layoutY="189.0" prefHeight="25.0" prefWidth="207.0" promptText="Password" />
            <Text fill="WHITE" layoutX="82.0" layoutY="336.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Already Have an Account?" />
            <Text fx:id="logInBtn" fill="#2dff26" layoutX="223.0" layoutY="336.0" onMouseClicked="#switchToLoginPage" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-cursor: Hand;" text="Log In" />
            <PasswordField fx:id="signInConfirmPassword" layoutX="72.0" layoutY="232.0" prefHeight="25.0" prefWidth="207.0" promptText="Confirm Password" />
         </children>
      </AnchorPane>
      <AnchorPane layoutX="350.0" prefHeight="505.0" prefWidth="350.0" style="-fx-background-color: #909692;">
         <children>
            <Text layoutX="42.0" layoutY="137.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Inventory Management System">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Text>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
