<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<AnchorPane prefHeight="600.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="inventorysystem.controllers.Dashboard2Controller">

    <!-- Link to stylesheet -->
    <stylesheets>
        <URL value="@/inventorysystem/assets/styles.css" />
    </stylesheets>

    <ScrollPane fitToWidth="true" fitToHeight="true"
                vbarPolicy="AS_NEEDED" hbarPolicy="NEVER"
                prefWidth="800" prefHeight="600">

        <VBox spacing="25" styleClass="dashboard-container">
            <padding>
                <Insets top="25" right="25" bottom="25" left="25"/>
            </padding>

            <!-- Header / Stats Row -->
            <HBox spacing="30" alignment="CENTER_LEFT">
                <Label text="📦 Total Items:" styleClass="stats-label"/>
                <Label fx:id="lblTotalItems" styleClass="stats-value"/>
                <Label text="⚠️ Low Stock:" styleClass="stats-label"/>
                <Label fx:id="lblLowStock" styleClass="stats-value"/>
                <Label text="💥 Damaged/Disposed:" styleClass="stats-label"/>
                <Label fx:id="lblDamaged" styleClass="stats-value"/>
                <Label text="🕓 Unscanned:" styleClass="stats-label"/>
                <Label fx:id="lblUnscanned" styleClass="stats-value"/>
            </HBox>


            <!-- Charts Section -->
            <VBox fx:id="chartContainer" spacing="40" styleClass="chart-section"/>
        </VBox>

    </ScrollPane>
</AnchorPane>
