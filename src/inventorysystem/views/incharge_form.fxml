<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>  
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/22"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="inventorysystem.controllers.InChargeFormController"
      spacing="15" styleClass="form-container">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label fx:id="titleLabel" text="Add In-Charge" styleClass="title-label">
        <font>
            <Font name="System Bold" size="20"/>
        </font>
    </Label>

    <GridPane hgap="15" vgap="12">
        <children>
            <Label text="Name:" GridPane.rowIndex="0"/>
            <TextField fx:id="nameField" promptText="Enter name" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label text="Position:" GridPane.rowIndex="1"/>
            <TextField fx:id="positionField" promptText="Enter position" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="Contact Info:" GridPane.rowIndex="2"/>
            <TextField fx:id="contactField" promptText="Enter contact" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <Label text="Assigned Category:" GridPane.rowIndex="3"/>
            <ComboBox fx:id="categoryComboBox" promptText="Select category" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        </children>
    </GridPane>

    <HBox spacing="10">
        <Button fx:id="saveButton" text="Save" styleClass="primary-btn" onAction="#handleSave"/>
        <Button text="Cancel" styleClass="danger-btn" onAction="#handleCancel"/>
    </HBox>

</VBox>
