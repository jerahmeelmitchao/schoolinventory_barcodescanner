<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/22"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="inventorysystem.controllers.CategoryController"
            style="-fx-background-color:#f4f6f7;">

    <children>

        <VBox spacing="25" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
            <padding>
                <Insets top="25" left="30" right="30" bottom="25"/>
            </padding>

            <!-- HEADER WITH EMOJI + COUNT -->
            <HBox spacing="12" alignment="CENTER_LEFT">

                <Label text="ðŸ“‚"
                       style="-fx-font-size:32px;"/>

                <Label text="Categories"
                       style="-fx-font-size:28px; -fx-font-weight:900; -fx-text-fill:#2c3e50;"/>

                <Label fx:id="categoryCountLabel"
                       text="0 Categories"
                       style="-fx-background-color:#3498db; -fx-text-fill:white;
                              -fx-padding:4 10; -fx-background-radius:12;
                              -fx-font-size:13px; -fx-font-weight:bold;"/>
            </HBox>

            <!-- INPUT CARD -->
            <VBox spacing="20"
                  style="-fx-background-color:white; -fx-background-radius:14;
                         -fx-padding:25; -fx-effect:dropshadow(gaussian, rgba(0,0,0,0.07), 15, 0, 0, 5);">

                <Label text="Add / Manage Categories"
                       style="-fx-font-size:17px; -fx-font-weight:700; -fx-text-fill:#2c3e50;"/>

                <GridPane hgap="15" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="150" halignment="RIGHT"/>
                        <ColumnConstraints prefWidth="350" halignment="LEFT"/>
                    </columnConstraints>

                    <children>
                        <Label text="Category Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="categoryNameField" promptText="Enter category name"
                                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                    </children>
                </GridPane>

                <!-- BUTTONS WITH EMOJI -->
                <HBox spacing="12">

                    <Button fx:id="addButton" text="âž• Add" onAction="#handleAdd"
                            styleClass="primary-btn"/>

                    <Button fx:id="updateButton" text="âœï¸ Update" onAction="#handleUpdate"
                            styleClass="secondary-btn"/>

                    <Button fx:id="deleteButton" text="ðŸ—‘ Delete" onAction="#handleDelete"
                            styleClass="danger-btn"/>

                    <Button fx:id="cancelButton" text="âŒ Cancel" onAction="#handleCancel"
                            styleClass="cancel-btn" visible="false"/>

                </HBox>
            </VBox>

            <!-- TABLE (NO CARD WRAPPER â€” CSS WILL STYLE IT) -->
            <Label text="Category List"
                   style="-fx-font-size:17px; -fx-font-weight:700; -fx-text-fill:#2c3e50;"/>

            <TableView fx:id="categoryTable" prefHeight="350">
                <columns>
                    <TableColumn fx:id="colCategoryId" text="ID" prefWidth="100"/>
                    <TableColumn fx:id="colCategoryName" text="Category Name" prefWidth="350"/>
                </columns>
            </TableView>

        </VBox>
    </children>

</AnchorPane>
